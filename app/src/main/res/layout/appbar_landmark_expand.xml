<?xml version="1.0" encoding="utf-8"?><!--확장 시-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="265dp"
    android:orientation="vertical"
    app:layout_collapseMode="parallax"
    tools:ignore="MissingPrefix">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_location"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/loading_img_landmark" />

        <ImageView
            android:id="@+id/iv_weather"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <View android:layout_width="match_parent"
            android:id="@+id/landmarkGradiantBox"
            android:background="@drawable/gradiant2"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <!--<ImageView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="bottom"-->
            <!--android:scaleType="centerCrop"-->
            <!--android:src="@drawable/app_bar_shadow" />-->

    </FrameLayout>

    <LinearLayout
        android:id="@+id/layout_content_expand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <TextView
            fontPath="fonts/NotoSansKR-DemiLight.otf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19.5dp"
            android:includeFontPadding="false"
            android:text="나는 지금"
            android:textColor="@color/colorWhite"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_location_name_kor_expand"
            fontPath="fonts/NotoSansKR-Regular.otf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:includeFontPadding="false"
            android:shadowColor="@color/colorBlack"
            android:shadowDy="0.5"
            android:shadowRadius="2.5"
            android:textColor="@color/colorWhite"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/tv_location_name_eng_expand"
            fontPath="fonts/Roboto-Regular.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:includeFontPadding="false"
            android:textColor="#d5d5d5"
            android:alpha="0.8"
            android:textSize="11sp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="11.5dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="51dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_toolbar_total_page_expand"
                fontPath="fonts/Roboto-Bold.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:includeFontPadding="false"
                android:text="0"
                android:textColor="#ffffff"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_toolbar_total_page_label_expand"
                fontPath="fonts/NotoSansKR-DemiLight.otf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:includeFontPadding="false"
                android:text="@string/main_toolbar_page_label"
                android:textColor="#ececec"
                android:textSize="13sp" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>