<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layout_toolbar"
        android:layout_width="match_parent"
        android:layout_height="241dp"
        android:orientation="vertical"
        app:layout_collapseMode="parallax">

        <ImageView
            android:id="@+id/iv_location"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/intro_toolbar" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="133dp">

            <ImageButton
                android:id="@+id/btn_my"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/mypage" />

            <ImageButton
                android:id="@+id/btn_map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/placeholder" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layout_content_expand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <TextView
                fontPath="fonts/NotoSansKR-DemiLight.otf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19.5dp"
                android:includeFontPadding="false"
                android:text="나는 지금"
                android:textColor="@color/colorWhite"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_location_name_kor_expand"
                fontPath="fonts/NotoSansKR-Regular.otf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:includeFontPadding="false"
                android:text="광화문"
                android:textColor="@color/colorWhite"
                android:textSize="35sp" />

            <TextView
                android:id="@+id/tv_location_name_eng_expand"
                fontPath="fonts/Roboto-Regular.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:includeFontPadding="false"
                android:text="Gwanghwamun"
                android:textColor="#d5d5d5"
                android:textSize="11sp" />


            <LinearLayout
                android:id="@+id/btn_write"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:layout_gravity="right|bottom"
                android:layout_marginBottom="13dp"
                android:layout_marginRight="13dp"
                android:layout_marginTop="28.5dp"
                android:background="@drawable/shape_button_write"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/write" />

                <TextView
                    fontPath="fonts/Roboto-Regular.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="글 남기기"
                    android:textColor="@color/colorWhite"
                    android:textSize="15sp" />

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/layout_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- 프래그먼트 -->
        <com.lsjwzh.widget.recyclerviewpager.RecyclerViewPager
            android:id="@+id/pager_intro"
            android:layout_width="match_parent"
            android:layout_height="414dp"
            android:layout_marginTop="15dp"
            android:clipToPadding="false"
            android:paddingEnd="42.5dp"
            android:paddingLeft="42.5dp"
            android:paddingRight="42.5dp"
            android:paddingStart="42.5dp"
            app:rvp_singlePageFling="true" />

    </RelativeLayout>

    <Button
        android:id="@+id/btn_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="확인" />
</RelativeLayout>
