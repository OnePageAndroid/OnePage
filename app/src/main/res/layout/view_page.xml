<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="275dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardCornerRadius="2dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="275dp"
            android:layout_height="275dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@drawable/main_test_img2" />

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="82dp"
            android:layout_below="@+id/iv_image"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:maxLines="4"
            android:text="sadfasfd asdfsadf sadf sadfasdf sadfsad fasdf sadf asdfsa dfasdf asdf as dfsa f asdf safdasfd asdf asfdasdfasfd sadfasfd asdfsadf sadf "
            android:textColor="#393939"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_text"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="21dp"
            android:text="12월 31일 18:33"
            android:textColor="#777777"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_text"
            android:layout_marginRight="10dp"
            android:layout_marginTop="22.5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_page_current"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2,101"
                android:textColor="#474747"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_slash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" / "
                android:textColor="#777777"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_page_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2,101"
                android:textColor="#828282"
                android:textSize="11sp" />

        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>