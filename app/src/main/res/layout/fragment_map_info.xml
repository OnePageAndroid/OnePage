<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="63.5dp"
        android:layout_marginLeft="22.5dp"
        android:layout_marginRight="22.5dp"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="#ffffff">

        <TextView
            android:text="남산타워"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvLocationName"
            android:textColor="#4a4a4a"
            android:textSize="20sp"
            android:layout_alignTop="@+id/imageView"
            android:layout_alignLeft="@+id/imageView"
            android:layout_alignStart="@+id/imageView"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="14.5dp" />

        <TextView
            android:text="새로운 글"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvTodayPageSize"
            android:layout_below="@+id/tvLocationName"
            android:layout_alignLeft="@+id/tvLocationName"
            android:layout_alignStart="@+id/tvLocationName"
            android:textColorLink="#f68558"
            android:textColor="#f68558"
            android:textSize="12sp"
            android:layout_marginTop="47dp"
            android:layout_marginLeft="14.5dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/my_place"
            android:id="@+id/ivMyPlace"
            android:layout_gravity="right"
            android:layout_marginRight="20dp" />

        <TextView
            android:text="|"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvBar"
            android:layout_alignBaseline="@+id/tvTodayPageSize"
            android:layout_alignBottom="@+id/tvTodayPageSize"
            android:layout_toRightOf="@+id/tvTodayPageSize"
            android:layout_toEndOf="@+id/tvTodayPageSize"
            android:textColor="#d5d5d5"
            android:textSize="10sp"
            android:layout_marginTop="48dp"
            android:layout_marginLeft="85.5dp" />

        <TextView
            android:text="새로운 글"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tvTodayPageSize"
            android:layout_alignBottom="@+id/tvTodayPageSize"
            android:layout_toRightOf="@+id/tvTodayPageSize"
            android:layout_toEndOf="@+id/tvTodayPageSize"
            android:textColor="#777777"
            android:textSize="12sp"
            android:layout_marginTop="46.5dp"
            android:layout_marginLeft="93.5dp"
            android:id="@+id/tvTotalPageSize" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></LinearLayout>


    </android.support.v7.widget.CardView>


</RelativeLayout>